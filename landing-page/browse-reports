  <script>
    // tabs
    function showTab(which) {
      document.getElementById('lostTab').classList.toggle('active', which === 'lost');
      document.getElementById('foundTab').classList.toggle('active', which === 'found');
      document.getElementById('lostTable').classList.toggle('hidden', which === 'found');
      document.getElementById('foundTable').classList.toggle('hidden', which === 'lost');
      // clear search box when switching
      document.getElementById('searchBox').value = '';
      filterRows(); // reset
    }

    // search - filters by Item Name only (first column)
    function filterRows() {
      const q = (document.getElementById('searchBox').value || '').trim().toLowerCase();
      // choose currently visible tbody
      const showLost = !document.getElementById('lostTable').classList.contains('hidden');
      const tbody = showLost ? document.getElementById('lostBody') : document.getElementById('foundBody');
      Array.from(tbody.querySelectorAll('tr')).forEach(row => {
        const firstCell = row.cells[0];
        const txt = firstCell ? firstCell.textContent.trim().toLowerCase() : '';
        row.style.display = txt.indexOf(q) !== -1 ? '' : 'none';
      });
    }

    function doSearch() {
      filterRows();
    }

    // live search as you type
    document.getElementById('searchBox').addEventListener('input', filterRows);
  </script>
